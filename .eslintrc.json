{
  "ecmaFeatures": {
    "modules": true,
    "spread": true,
    "restParams": true
  },
  "env": {
    "node": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "warn",
    "semi": [
      "warn",
      "always",
      {
        "omitLastInOneLineBlock": true
      }
    ],
    "semi-style": ["warn", "last"],
    "quotes": ["warn", "double"],
    "indent": [
      "warn",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "no-multi-spaces": "warn",
    "no-multiple-empty-lines": [
      "warn",
      {
        "max": 1,
        "maxEOF": 0
      }
    ],
    "space-infix-ops": "warn",
    "comma-spacing": "warn",
    "block-spacing": "warn",
    "semi-spacing": "warn",
    "object-curly-spacing": ["warn", "always"],
    "key-spacing": "warn",
    "eol-last": "warn",
    "no-undef": "warn"
  }
}
